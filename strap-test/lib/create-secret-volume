#!/usr/bin/env bash

cd `dirname "$BASH_SOURCE"`/../..
source strap-test/config

name=${1:-dc1}

kubectl create secret generic ${name} \
  --from-file=keystore.jks=./strap-test/resources/gen/${name}.jks \
  --from-file=./strap-test/resources/gen/truststore.jks \
  --from-file=./strap-test/resources/gen/cacert.pem \
  --dry-run -o yaml | kubectl apply -f -

# Set debug options
# JVM_OPTS="${JVM_OPTS} -agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=5005"